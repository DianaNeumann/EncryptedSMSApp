<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setup.ConfigChoiceActivity">

    <Button
        android:id="@+id/cmdFilechooser"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="31dp"
        android:text="Select Config File"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cmdNavigateToQR"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:text="Scan QR to Config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdFilechooser" />
</androidx.constraintlayout.widget.ConstraintLayout>